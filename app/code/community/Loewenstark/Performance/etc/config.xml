<config>
    <modules>
        <Loewenstark_Performance>
            <version>1.0.0.0</version>
        </Loewenstark_Performance>
    </modules>
    <global>
        <helpers>
            <loeperformance>
                <class>Loewenstark_Performance_Helper</class>
            </loeperformance>
            <catalog>
                <rewrite>
                    <product_configuration>Loewenstark_Performance_Helper_Catalog_Product_Configuration</product_configuration>
                </rewrite>
            </catalog>
            <germansetup>
                <rewrite>
                    <catalog_product_configuration>Loewenstark_Performance_Helper_Catalog_Product_Configuration</catalog_product_configuration>
                </rewrite>
            </germansetup>
        </helpers>
        <models>
            <loeperformance>
                <class>Loewenstark_Performance_Model</class>
            </loeperformance>
        </models>
        <events>
            <sales_quote_config_get_product_attributes>
                <observers>
                    <loeper_sales_quote_config_get_product_attributes>
                        <type>singleton</type>
                        <class>loeperformance/observer</class>
                        <method>addProductQuoteConfigAttributes</method>
                    </loeper_sales_quote_config_get_product_attributes>
                </observers>
            </sales_quote_config_get_product_attributes>     
        </events>
    </global>
</config>